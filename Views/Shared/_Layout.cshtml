<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Job Portal</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jqueryui")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div id="bgbasic">
        <div id="basicwidth">
            <div class="meta">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="metalinks">
                                <a href="#"><img src="~/Images/meta1.gif" alt="" width="15" height="14" /></a>
                                <a href="#"><img src="~/Images/meta2.gif" alt="" width="17" height="14" /></a>
                                <a href="#"><img src="~/Images/meta3.gif" alt="" width="17" height="14" /></a>
                                <a href="#"><img src="~/Images/meta4.gif" alt="" width="15" height="14" /></a>
                            </div>
                            @*<p>Recruiters: <a href="#">Register</a> or <a href="#">Find out more</a></p>*@
                        </div>
                    </div>
                </div>
            </div>
            <div id="header">
                <div class="row">
                    <div class="col-xs-4 col-sm-4 col-md-4">
                        <a href="/Home/Index" class="logo"><img src="~/images/logo.jpg" class="img-responsive" alt="Job Portal" /></a>
                    </div>
                    <div class="col-xs-4 col-sm-4 col-md-6">
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
            <div class="container-fluid" style="">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        @{
                            var controller = HttpContext.Current.Request.RequestContext.RouteData.Values["Controller"].ToString();
                            if (controller == "Home")
                            {
                                if (Request.IsAuthenticated == false)
                                {
                                    <img src="~/images/bigpicture.jpg" alt="" class="img-responsive" />
                                }
                                else
                                {
                                    <div class="col-xs-12 col-sm-5 col-md-8 space">
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="col-xs-12 col-sm-5 col-md-8 space">
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="container-fluid" style="">
                <div class="searchbg">
                    <div class="row">
                        <div class="col-xs-12 col-sm-4 col-sm-offset-1 col-md-4 col-md-offset-2 ">
                            <input type="text" placeholder="Enter keywords" class="form-control" />
                        </div>
                        <div class="col-xs-12 col-sm-4 col-md-3 ">
                            <input type="text" class="form-control" placeholder="Enter Locations (country, city)" />
                        </div>
                        <div class="col-xs-12 col-sm-1 col-md-1 ">
                            <a href="#" class="btn btn-primary">Search</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12 paddingspace">
                    </div>
                </div>
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xs-12 col-sm-3 col-md-3 ">
                        @Html.Partial("_LeftCol")
                    </div>
                    <div class="col-xs-12 col-sm-9 col-md-9 ">
                        @RenderBody()
                    </div>
                </div>
            </div>
            <div class="container-fluid">

                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Job Portal</p>
                </footer>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    <script>
        $(function () {
            $(".jqueryui-marker-datepicker").datepicker({
                dateFormat: "dd-mm-yy",
                changeYear:true
            })
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
