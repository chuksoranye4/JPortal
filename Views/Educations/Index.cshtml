@model IEnumerable<JPortal.Models.Education>

@{
    ViewBag.Title = "Education/ Training";
}

<div class="myforms GreenText">
    <h2>Education</h2>
    <div class="table-responsive">
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Course)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Qualification)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FromDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ToDate)
                </th>                
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Qualification)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FromDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ToDate)
                    </td>                    
                    <td>
                        <span class="btn btn-primary">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "whiteText" })
                        </span> 
                        @{ var Url = "Educations/Delete/" +item.Id ; }    
                         <span class="btn btn-danger">
                            <a href=@Url onclick="JavaScript:return confirm('Are You Sure')" class="whiteText">Delete</a>
                        </span>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<br/>
    <p>
        <span class="btn btn-success">
            @Html.ActionLink("Add Education", "Create",null, new { @class = "whiteText" })
            </span>
        </p>
