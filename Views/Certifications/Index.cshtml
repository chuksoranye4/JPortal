@model IEnumerable<JPortal.Models.Certification>
@{
    ViewBag.Title = "Professional Certification";
}
<div class="myforms GreenText">
    <h2>Professional Certification</h2>

    <div class="table-responsive">
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NameOfTheBody)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CertficateName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateObtained)
                </th>                
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NameOfTheBody)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CertficateName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateObtained)
                    </td>
                    <td>
                        <span class="btn btn-primary">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "whiteText" }) 
                            </span>
                        @{ var Url = "Certifications/Delete/" + item.Id; }
                        <span class="btn btn-danger">
                            <a href=@Url onclick="JavaScript:return confirm('Are You Sure')" class="whiteText">Delete</a>
                        </span>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
<br/>
<p>
    <span class="btn btn-success">
    @Html.ActionLink("Add New Cert.", "Create", null, new { @class = "whiteText" })
    </span>
</p>