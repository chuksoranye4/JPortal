@model JPortal.Models.JobPreference

@{
    ViewBag.Title = "Job Preference";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="myforms GreenText">
        <div class="form-horizontal">
            <h2>Job Preference</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.LabelFor(model => model.CategoryID, "CategoryID", htmlAttributes: new { @class = "control-label col-md-2 bold" })
                <div class="col-md-6">
                    @Html.DropDownList("CategoryID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.StateID, "StateID", htmlAttributes: new { @class = "control-label col-md-2 bold" })
                <div class="col-md-6">
                    @Html.DropDownList("StateID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.StateID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-xs-12 col-sm-5 col-md-4">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
                <div class="col-xs-12 col-sm-5 col-md-2 col-md-offset-4">
                    <span class="btn btn-primary"> @Html.ActionLink("Back to List", "Index", null, new { @class = "whiteText" })</span>
                </div>
            </div>
        </div>
        </div>
        }
